@using NPD.ViewModel
@model LoginDTO

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutPage.cshtml";
}



<div class="block-center mt-xl wd-xl">
    <!-- START panel-->

    <div class="panel panel-dark panel-flat">
        <div class="panel-heading text-center">
            <span style="font-size:28px;"> NPD</span>
        </div>
        <div class="panel-body">
            <p class="text-center pv">SIGN IN TO CONTINUE.</p>
            @using (Html.BeginForm("Index", "Login", FormMethod.Post, new { @class = "form-horizontal" }))
            {
                <div class="form-group has-feedback">
                    @Html.TextBoxFor(x => x.UserName, new { @id = "txtUserName", @placeholder = "Enter email", @autocomplete = "off", @class = "form-control" })
                    <span class="fa fa-envelope form-control-feedback text-muted"></span>
                </div>
                <div class="form-group has-feedback">
                    @Html.PasswordFor(x => x.Password, new { @id = "txtPassword", @placeholder = "Enter password", @autocomplete = "off", @class = "form-control" })
                    <span class="fa fa-lock form-control-feedback text-muted"></span>
                </div>
                <div class="clearfix">
                    <div class="checkbox c-checkbox pull-left mt0">
                        <label>
                            @Html.CheckBoxFor(x => x.RememberMe)
                            @*<input type="checkbox" value="" name="remember" />*@
                            <span class="fa fa-check"></span>Remember Me
                        </label>
                    </div>
                </div>
                <button type="submit" class="btn btn-block btn-primary mt-lg">Login</button>
            }
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-12">
            @if (ViewBag.IsError != null)
            {
                if (ViewBag.IsError == false)
                {
                    <div class="alert alert-success">
                        <b>Success&nbsp;:&nbsp;</b>@ViewBag.Message
                    </div>
                }
                else
                {
                    <div class="alert alert-danger">
                        <b>Error&nbsp;:&nbsp;</b>@ViewBag.Message
                    </div>
                }
            }
        </div>
    </div>

    <!-- END panel-->
</div>
