@using NPD.DAL
@model IEnumerable<CustomFault>

@{
    ViewBag.Title = "Tables Standard";
}
<h3>
    Current JObs
</h3>
<!-- START row-->
<div class="row">
    <div class="form-group">
        <div class="col-sm-12">
            @if (ViewBag.IsError != null)
            {
                if (ViewBag.IsError == false)
                {
                    <div class="alert alert-success">
                        <b>Success&nbsp;:&nbsp;</b>@ViewBag.Message
                    </div>
                }
                else
                {
                    <div class="alert alert-danger">
                        <b>Error&nbsp;:&nbsp;</b>@ViewBag.Message
                    </div>
                }
            }
        </div>
    </div>
    <div class="col-lg-12">
        <!-- START panel-->
        <div class="panel panel-default">
            <div class="panel-body">
                <!-- START table-responsive-->
                <div class="table-responsive">
                    <table class="table table-striped table-bordered table-hover">
                        <thead>
                            <tr>
                                <th>Company</th>
                                <th>Location</th>
                                <th>Description</th>
                                <th>Priority</th>
                                <th>Complexity</th>
                                <th>Assigned To</th>
                                <th>Created Date</th>
                                <th>Start Date</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var job in Model)
                            {
                                <tr>
                                    <td>@job.CompanyName</td>
                                    <td>@job.Location</td>
                                    <td>@job.FaultDescription</td>
                                    <td>@job.Priority</td>
                                    <td>@job.Complexity</td>
                                    <td>@job.AssignedTo</td>
                                    <td>@job.DisplayStartDate</td>
                                    <td>@job.DisplayCreatedDate</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
                <!-- END table-responsive-->
            </div>
        </div>
        <!-- END panel-->
    </div>
</div>


