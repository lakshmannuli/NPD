@using NPD.DAL
@model IEnumerable<CustomFault>

@{
    ViewBag.Title = "Tables Standard";
}
<h3>
    Current Jobs
</h3>

<div class="container-fluid">
    <!-- START DATATABLE 1 -->
    <div class="row">
        <div class="form-group">
            <div class="col-sm-12">
                @if (ViewBag.IsError != null)
            {
                if (ViewBag.IsError == false)
                {
                        <div class="alert alert-success">
                            <b>Success&nbsp;:&nbsp;</b>@ViewBag.Message
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-danger">
                            <b>Error&nbsp;:&nbsp;</b>@ViewBag.Message
                        </div>
                    }
                }
            </div>
        </div>
        <div class="col-lg-12">
            <div class="panel panel-default">

                <div class="panel-body">
                    <div class="table-responsive">
                        <table id="datatable1" class="table table-striped table-hover">
                            <thead>
                                <tr>
                                    <th>Company</th>
                                    <th>Location</th>
                                    <th>Description</th>
                                    <th>Priority</th>
                                    <th>Complexity</th>
                                    <th>Assigned To</th>
                                    <th>Created Date</th>
                                    <th>Start Date</th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var job in Model)
                                {
                                    <tr>
                                        <td>@job.CompanyName</td>
                                        <td>@job.Location</td>
                                        <td>@job.FaultDescription</td>
                                        <td>@job.Priority</td>
                                        <td>@job.Complexity</td>
                                        <td>@job.AssignedTo</td>
                                        <td>@job.DisplayCreatedDate</td>
                                        <td>@job.DisplayStartDate</td>
                                        <td>
                                            <a class="btn btn-primary btn-xs" href="@Url.Action("Edit", "Job", new { id =@job.Id })">
                                                <i class="fa fa-pencil"></i>
                                            </a>&nbsp;
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- END DATATABLE 1 -->

</div>

@section Styles {
    @Styles.Render("~/bundles/datatablesCss")
}
@section Scripts {
    @Scripts.Render("~/bundles/datatables")
    @Scripts.Render("~/bundles/demoDatatable")
}
